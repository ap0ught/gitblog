#!/bin/sh
#git log -C -B -1 -u --no-color --pretty=full --encoding=UTF-8 \
git diff -p --full-index HEAD@{1} HEAD \
| curl \
  -H 'x-gb-shared-secret: xyz' \
  --connect-timeout 5 \
  --max-time 30 \
  --silent --show-error \
  --data-binary @- \
  -k \
  'http://localhost/gitblog/index.php/gitblog/hooks/post-patch'
